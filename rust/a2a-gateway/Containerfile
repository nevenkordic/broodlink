FROM docker.io/library/rust:1.82-slim-bookworm AS builder

WORKDIR /build
COPY Cargo.toml Cargo.lock ./
COPY crates/ crates/
COPY rust/ rust/
COPY config.toml ./

RUN cargo build --release -p a2a-gateway && \
    cp target/release/a2a-gateway /build/service

FROM docker.io/library/debian:bookworm-slim
RUN apt-get update && apt-get install -y --no-install-recommends ca-certificates curl && rm -rf /var/lib/apt/lists/* \
    && groupadd -r broodlink && useradd -r -g broodlink broodlink
COPY --from=builder /build/service /usr/local/bin/service
COPY --from=builder /build/config.toml /etc/broodlink/config.toml
ENV BROODLINK_CONFIG=/etc/broodlink/config.toml
USER broodlink
EXPOSE 3313
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:3313/health || exit 1
CMD ["/usr/local/bin/service"]
